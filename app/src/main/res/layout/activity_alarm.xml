<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.bsuir.com.wakeup.activity.alarm.AlarmActivity">

    <ImageView
        android:src="@drawable/wakeup"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerInside"
        android:src="@drawable/wake_up_btn_background"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="60dp"
        android:padding="0dp"
        android:text="@string/wake_up"
        android:textSize="24sp"/>

</android.widget.FrameLayout>
